#!/usr/bin/expect -f
#
# this is an expect script to automatically run commands on a equallogic-filer
#

if {[llength $argv]<2} {
        send_user "usage: $argv0 <equallogic-ip> <equallogic-user> <equallogic-password> <command>\n"
        exit
}

set EQUALLOGIC_IP [lindex $argv 0]
set EQUALLOGIC_USER [lindex $argv 1]
set EQUALLOGIC_PASSWORD [lindex $argv 2]
set EQUALLOGIC_VOLUME [lindex $argv 3]
set EQUALLOGIC_VOLUME_USER [lindex $argv 4]
set EQUALLOGIC_VOLUME_PASS [lindex $argv 5]

send_user "Authenticating $EQUALLOGIC_VOLUME to $EQUALLOGIC_VOLUME_USER on $EQUALLOGIC_IP as $EQUALLOGIC_USER\n"

set force_conservative 0  ;# set to 1 to force conservative mode even if
                          ;# script wasn't run conservatively originally
if {$force_conservative} {
        set send_slow {1 .1}
        proc send {ignore arg} {
                sleep .1
                exp_send -s -- $arg
        }
}

set timeout 30
spawn /bin/bash
match_max 100000
send -- "ssh $EQUALLOGIC_USER@$EQUALLOGIC_IP\r"

expect {
    "yes/no)?" {
                send "yes\r"
                set timeout -1
    } timeout {
                exit
    } -re . {
                exp_continue
    } eof {
                exit
    }
 }

expect -exact "password: "
send -- "$EQUALLOGIC_PASSWORD\r"
expect -exact ">"

# remove first to be sure it is not in there double
send -- "chapuser delete $EQUALLOGIC_VOLUME_USER\r"
send -- "y\r"
expect -exact ">"
# create chapuser
send -- "chapuser create $EQUALLOGIC_VOLUME_USER password $EQUALLOGIC_VOLUME_PASS\r"
expect -exact ">"
# create access to volume
send -- "volume select $EQUALLOGIC_VOLUME\r"
expect -exact ">"
send -- "access create username $EQUALLOGIC_VOLUME_USER\r"
expect -exact ">"
send -- "exit\r"

expect -exact ">"
send -- "logout\r"
send -- "\r"
expect {
    "Do you really want to logout? (y/n) \[n\]" {
        send -- "y\r"
    } "Connection to $EQUALLOGIC_IP closed." {
    } timeout {
        exit
    } eof {
        exit
    }
}



