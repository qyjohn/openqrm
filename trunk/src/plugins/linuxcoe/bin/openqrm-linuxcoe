	Fedora-7-x86_64-iso.tar	\
	Fedora-7-x86_64-usbboot.img	\
	Fedora-8-i386-iso.tar	\
	Fedora-8-i386-usbboot.img	\
	Fedora-8-x86_64-iso.tar	\
	Fedora-8-x86_64-usbboot.img	\
	Fedora-9-i386-iso.tar	\
	Fedora-9-x86_64-iso.tar	\
	Ubuntu-Dapper-i386-iso.tar	\
	Ubuntu-Edgy-i386-iso.tar	\
	Ubuntu-Feisty-i386-iso.tar	\
	Ubuntu-Feisty-x86_64-iso.tar	\
	Ubuntu-Gutsy-i386-iso.tar	\
	Ubuntu-Gutsy-x86_64-iso.tar	\
	Ubuntu-Hardy-i386-iso.tar	\
	Ubuntu-Hardy-x86_64-iso.tar	\
	Ubuntu-Intrepid-i386-iso.tar	\
	Ubuntu-Intrepid-x86_64-iso.tar"


